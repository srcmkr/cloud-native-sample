@inject IConfiguration configuration

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="monitor" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Monitor</MudNavLink>
    <MudNavLink Href="products" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Category">Products</MudNavLink>
    <MudNavLink Href="@ZipkinUrl" Target="_blank" Icon="@Icons.Outlined.MonitorHeart">Zipkin</MudNavLink>
    <MudNavLink Href="@GrafanaUrl" Target="_blank" Icon="@Icons.Outlined.InsertChart">Grafana</MudNavLink>
    <MudNavLink Href="@FakeSmtpUrl" Target="_blank" Icon="@Icons.Outlined.Email">Fake SMTP</MudNavLink>
</MudNavMenu>

@code {
    
    private string FakeSmtpUrl
    {
        get
        {
            return configuration["FakeSmtpUrl"];
        }
    }
    
    private string ZipkinUrl 
    {
        get
        {
            return configuration["ZipkinUrl"];
        }
    }

    private string GrafanaUrl
    {
        get{
            return configuration["GrafanaUrl"];
        }
    }
}
